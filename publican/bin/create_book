#!/usr/bin/env perl

use strict;
use warnings;
use Getopt::Long;
use Pod::Usage;
use Carp;

my $name     = undef;
my $version  = '0.1';
my $revision = '0';
my $product  = 'Documentation';
my $brand    = undef;
my $man      = 0;
my $help     = 0;
my $article  = undef;
my $lang     = undef;

GetOptions(
    'h|help|?'   => \$help,
    'man'        => \$man,
    'name=s'     => \$name,
    'version=s'  => \$version,
    'revision=s' => \$revision,
    'product=s'  => \$product,
    'article'    => \$article,
    'brand=s'    => \$brand,
    'lang=s'     => \$lang,
) or pod2usage(2);
pod2usage(1) if $help;
pod2usage( -verbose => 2 ) if $man;
pod2usage(1) if !$name;

my $bookname = $name;
$bookname =~ s/_/ /g;

my $productname = $product;
$productname =~ s/_/ /g;

croak("directory $bookname exists!") if (-e $bookname);

my $cmd = '';

if (! $brand) {
    $cmd  = "cp -rf /usr/share/publican/Templates/common-Book_Template $name";
}
else {
    if(! -d "/usr/share/publican/Templates/$brand-Book_Template") {
        croak("Brand $brand does not contain a Book_Template!\nValid brands are:\n" . `ls /usr/share/publican/Common_Content`);
    }
    $cmd  = "cp -rf /usr/share/publican/Templates/$brand-Book_Template $name";
}

system($cmd);
if ($@) {
    croak "can't copy Book_Template: $!";
}

if ($article) {
    $cmd = qq|mv $name/en-US/Article.xml $name/en-US/$name.xml|;
    system($cmd);
    if ($@) {
        croak "can't rename Article.xml: $!";
    }

    $cmd
        = qq|rm -f $name/en-US/Book.xml $name/en-US/Chapter.xml $name/en-US/Preface.xml|;
    system($cmd);
    if ($@) {
        croak "can't rm Book.xml: $!";
    }
}
else {
    $cmd = qq|mv $name/en-US/Book.xml $name/en-US/$name.xml|;
    system($cmd);
    if ($@) {
        croak "can't rename Book.xml: $!";
    }

    $cmd = qq|rm -f $name/en-US/Article.xml|;
    system($cmd);
    if ($@) {
        croak "can't rename Book.xml: $!";
    }
}

$cmd = qq|mv $name/en-US/Book.ent $name/en-US/$name.ent|;
system($cmd);
if ($@) {
    croak "can't rename Book.ent: $!";
}

$cmd
    = qq|sed -i -e 's/<issuenum>.*<\\/issuenum>/<issuenum>$version<\\/issuenum>/g' $name/en-US/Book_Info.xml|;
system($cmd);
if ($@) {
    croak "can't update version: $!";
}

$cmd
    = qq|sed -i -e 's/<productnumber>.*<\\/productnumber>/<productnumber>$revision<\\/productnumber>/g'  $name/en-US/Book_Info.xml|;
system($cmd);
if ($@) {
    croak "can't update revision: $!";
}

if ($article) {
    $cmd = qq|mv $name/en-US/Book_Info.xml $name/en-US/Article_Info.xml|;
    system($cmd);
    if ($@) {
        croak "can't rename Book_Info.xml: $!";
    }

    $cmd = qq|sed -i -e 's/book/article/g' $name/en-US/Article_Info.xml|;
    system($cmd);
    if ($@) {
        croak "can't change book to article: $!";
    }

    $cmd
        = qq|sed -i -e 's/DOCNAME/DOC_TYPE		= Article\\nDOCNAME/g' $name/Makefile|;
    system($cmd);
    if ($@) {
        croak "can't set DOC_TYPE: $!";
    }
}

$cmd = qq|find $name  -type f \| xargs sed -i -e 's/MYBOOKNAME/$bookname/g'|;
system($cmd);
if ($@) {
    croak "can't update MYBOOKNAME: $!";
}

$cmd = qq|find $name  -type f \| xargs sed -i -e 's/MYBOOK/$name/g'|;
system($cmd);
if ($@) {
    croak "can't update MYBOOK: $!";
}


$cmd = qq|find $name -type f \| xargs sed -i -e 's/MYPRODUCTNAME/$productname/g'|;
system($cmd);
if ($@) {
    croak "can't update MYPRODUCTNAME: $!";
}

$cmd = qq|find $name -type f \| xargs sed -i -e 's/MYPRODUCT/$product/g'|;
system($cmd);
if ($@) {
    croak "can't update MYPRODUCT: $!";
}
	
$cmd
    = qq|sed -i -e 's/#PRODUCT	= FIX_ME!/PRODUCT\\t\\t= $product/g' $name/Makefile|;
system($cmd);
if ($@) {
    croak "can't update PRODUCT: $!";
}

if ( $lang and $lang ne '' ) {
    $cmd = qq|sed -i -e 's/XML_LANG.*\$/XML_LANG\\t= $lang/g' $name/Makefile|;
    system($cmd);
    if ($@) {
        croak "can't update XML_LANG: $!";
    }
    $cmd = qq|mv $name/en-US $name/$lang|;
    system($cmd);
    if ($@) {
        croak "can't update XML_LANG: $!";
    }
}

__END__

=head1 NAME

create_book

=head1 SYNOPSIS

create_book --name=<book_name> [options]

 Options:
   -help               Brief help message
   -man                Full documentation
   --name              Name (Required)
   --version           Version
   --revision          Revision
   --product           Product
   --article           Article not Book
   --brand             Select Brand
   --lang              Source Language

=head1 OPTIONS

=head2 -help

Print a brief help message and exits.

=head2 -man

Prints the manual page and exits.

=head2 --name

Name of Book/Article

=head2 --version

Version of this Book. Defaults to 0.1

=head2 --revision

Revison of this Book. Defaults to 0

=head2 --product

Product which contains this Book. Defaults to Documentation.

=head2 --article

Create an Article instead of a Book.

=head2 --brand

Use the specified brand for branding output.

=head2 --lang

Use the specified langauge as the source language.

=head1 DESCRIPTION

B<This program> creates a new Book or Article for use with the publican package.

