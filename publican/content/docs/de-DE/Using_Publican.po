#, no-c-format
msgid ""
"Run the following command to check for any errors that would stop the book "
"from building:"
msgstr ""

#. #-#-#-#-#  - (PACKAGE VERSION)  #-#-#-#-#
#. Tag: screen
#. #-#-#-#-#  - (PACKAGE VERSION)  #-#-#-#-#
#. Tag: command
#, no-c-format
msgid "make test-en-US"
msgstr ""

#. Tag: para
#, no-c-format
msgid "Run the following command to build the book:"
msgstr ""

#. Tag: screen
#, no-c-format
msgid "make <replaceable>format</replaceable>-en-US"
msgstr ""

